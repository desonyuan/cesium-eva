generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./sql.db"
}

model User {
  id             Int              @id @default(autoincrement())
  username       String           @unique
  password       String
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  role           String
  RoadClosure    RoadClosure[]
  ReportWildfire ReportWildfire[]
}

model RoadClosure {
  id        Int      @id @default(autoincrement())
  lat       Float
  lng       Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User     @relation(fields: [userId], references: [id])
  userId    Int
}

model Shelter {
  id        Int      @id @default(autoincrement())
  shelterId String   @unique // shelter_id from GeoJSON
  lat       Float
  lng       Float
  capacity  Int
  hexId     String // hex_id from GeoJSON
  region    String // "la" or "squamish"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ReportWildfire {
  id        Int      @id @default(autoincrement())
  lat       Float
  lng       Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User     @relation(fields: [userId], references: [id])
  userId    Int
}
